modules = ["python-base-3.13"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-23_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
build = ["sh", "-c", "python manage.py collectstatic --noinput"]
run = [
  "sh", "-c", 
  "gunicorn frequenza_libera.wsgi:application --bind 0.0.0.0:3000 --workers 1 --worker-class sync --timeout 300 --log-level debug"
]

deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80
