run = [
    "gunicorn",
    "frequenza_libera.wsgi:application",
    "--host",
    "0.0.0.0",
    "--port",
    "3000"
]
entrypoint = "manage.py"
modules = ["python-3.10:v18-20230807-322e88b"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_11"

[unitTest]
language = "python3"

[deployment]
run = [
    "sh", "-c",
    "python",
    "manage.py",
    "migrate",
    "--noinput",
    "python",
    "manage.py",
    "collectstatic",
    "--noinput",
    "gunicorn",
    "frequenza_libera.wsgi:application",
    "--host",
    "0.0.0.0",
    "--port",
    "3000"
]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80