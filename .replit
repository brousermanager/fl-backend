modules = ["python-base-3.13"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-23_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "gunicorn frequenza_libera.wsgi:application --bind 0.0.0.0:3000"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "python -m pip install -r requirements.txt"]

[[ports]]
localPort = 3000
externalPort = 80