modules = ["python-3.10:v18-20230807-322e88b"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-23_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = [
  "sh", "-c", 
  "python3 manage.py collectstatic --noinput && gunicorn frequenza_libera.wsgi:application --bind 0.0.0.0:3000 --workers 1 --worker-class sync --timeout 300 --log-level debug"
]

deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80
